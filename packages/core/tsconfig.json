{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/types/*": ["./types/*"],
      "@/lib/*": ["./*"],
      "@/services/*": ["./services/*"],
      "@/utils/*": ["./utils/*"],
      "@/database/*": ["./database/*"],
      "@/delegation/*": ["./delegation/*"],
      "@/forum/*": ["./forum/*"],
      "@/waku/*": ["./waku/*"],
      "@/wallet/*": ["./wallet/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "**/*.test.ts", "**/*.spec.ts"]
}
