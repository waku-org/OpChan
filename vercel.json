{
  "version": 2,
  "installCommand": "npm ci --workspaces --include=optional",
  "buildCommand": "cd app && npm run build",
  "outputDirectory": "app/dist",
  "rewrites": [{ "source": "/(.*)", "destination": "/index.html" }],
  "functions": {
    "app/dist/**": {
      "runtime": "nodejs20.x"
    }
  }
}

